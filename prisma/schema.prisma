datasource db {
  provider = "sqlite"
  // ‚ùå NO url line here
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  dateTime    DateTime
  tag         String?
  posterUrl   String?
  ticketsUrl  String?
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
